<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reamu.yourquotes">

    <application
        android:name=".Controller.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontEnd.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FrontEnd.DetailQuotesActivity" />


        <activity android:name=".Controller.MainLeanBackActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <!-- This service is only used on devices with API v17+ -->

        <activity
            android:name=".FrontEnd.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".FrontEnd.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>